<h1>Listing products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Description</th>
      <th>Imageurl</th>
      <th>Price</th>
      <th>Discount</th>
      <th>Stock</th>
      <th>Status</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>

  <!--Display Product Details-->
  <% @products.each do |product| %>
      <tr>
        <td><%= product.name            %></td>
        <td><%= product.type_id         %></td>
        <td><%= product.description     %></td>
        <td><%= image_tag(GetImageUrl(product.id, 'small'), alt: 'product img') %></td>
        <td><%= product.price           %></td>
        <td><%= product.discount        %></td>
        <td><%= product.stock           %></td>
        <td><%= product.status          %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Details', product_details_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

