<h1>Listing product_sizes</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Size</th>
      <th>Quantity</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @product_sizes.each do |product_size| %>
      <tr>
        <td><%= product_size.product_id %></td>
        <td><%= product_size.size_id %></td>
        <td><%= product_size.quantity %></td>
        <td><%= link_to 'Show', product_size %></td>
        <td><%= link_to 'Edit', edit_product_size_path(product_size) %></td>
        <td><%= link_to 'Destroy', product_size, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

